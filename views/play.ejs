<%- contentFor('body') %>
<!-- GAMES TABLE -->
<div class="bet_area bet_background">

    <div class="game_row">
        <div class="column">
            <h4>Fixtures</h4>
        </div>
        <div class="column">
            <h4>Betting Area</h4>
        </div>
    </div>

    <!-- <% include common/games.ejs %> -->
    <% for (let i = 0; i < games.length; i++) { %>
    <div game_block game_block_<%=i%> class="game_row">
        <div class="column">
            <%- include('common/fixture.ejs', {teamA: games[i].teamA, teamB: games[i].teamB, isBet: true, blockNumber: i}) %>
        </div>
        <div class="user_input_col">
            <p>Select Match Winner:<select game_winner name="Winner">
                    <option value="<%= games[i].teamA.name %>"><%= games[i].teamA.name %></option>
                    <option value="<%= games[i].teamB.name %>"><%= games[i].teamB.name %></option>
                </select></p>
        </div>
    </div>
    <% } %>
</div>

<% if (games.length > 0) { %>
<div class="golden_try" class="game_row">
    <h2>Golden Try Prediction</h2> <input golden_try_input name="goldenTry" type="number" min="0" size="5">
</div>
<% } %>

<div class='place_bet_button'>
    <% if (games.length > 0) { %>
    <button onclick="placeBet(<%= games[0].roundIndex %>, <%= games.length %>)" type="button" id="bet_button">
        <h2>Place your Bets!</h2>
    </button>
    <% } else { %>
    <button disabled type="button" id="bet_button">
        <h2>No games!</h2>
    </button>
    <% } %>
</div>
<script src="/javascript/play.js"></script>